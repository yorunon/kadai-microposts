  <% if current_user.liking?(micropost) %>
    <%= form_for(current_user.likes_relationships.find_by(like_id: micropost.id), html: {method: :delete}) do |f| %>
      <%= hidden_field_tag :like_id, micropost.id %>
      <%= f.submit 'Unlike', class: 'btn btn-warning btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.likes_relationships.build) do |f| %>
      <%= hidden_field_tag :like_id, micropost.id %>
      <%= f.submit 'like', class: 'btn btn-primary  btn-xs' %>
    <% end %>
  <% end %>